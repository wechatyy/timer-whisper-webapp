
.wux-switch__input {
  position: relative;
  width: 104rpx;
  height: 64rpx;
  border: 2rpx solid #dfdfdf;
  outline: 0;
  border-radius: 32rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  background-color: #dfdfdf;
  -webkit-transition: background-color .1s,border .1s;
  -o-transition: background-color .1s,border .1s;
  transition: background-color .1s,border .1s
}
.wux-switch__input:before {
  content: " ";
  position: absolute;
  top: 0;
  left: 0;
  width: 100rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #fdfdfd;
  -webkit-transition: -webkit-transform .35s cubic-bezier(.45,1,.4,1);
  transition: -webkit-transform .35s cubic-bezier(.45,1,.4,1);
  -o-transition: transform .35s cubic-bezier(.45,1,.4,1);
  transition: transform .35s cubic-bezier(.45,1,.4,1);
  transition: transform .35s cubic-bezier(.45,1,.4,1), -webkit-transform .35s cubic-bezier(.45,1,.4,1)
}
.wux-switch__input:after {
  content: " ";
  position: absolute;
  top: 0;
  left: 0;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #fff;
  -webkit-box-shadow: 0 2rpx 6rpx rgba(0,0,0,.4);
          box-shadow: 0 2rpx 6rpx rgba(0,0,0,.4);
  -webkit-transition: -webkit-transform .35s cubic-bezier(.4,.4,.25,1.35);
  transition: -webkit-transform .35s cubic-bezier(.4,.4,.25,1.35);
  -o-transition: transform .35s cubic-bezier(.4,.4,.25,1.35);
  transition: transform .35s cubic-bezier(.4,.4,.25,1.35);
  transition: transform .35s cubic-bezier(.4,.4,.25,1.35), -webkit-transform .35s cubic-bezier(.4,.4,.25,1.35)
}
.wux-switch__input--checked {
  border-color: #33cd5f;
  background-color: #33cd5f
}
.wux-switch__input--checked:before {
  -webkit-transform: scale(0);
      -ms-transform: scale(0);
          transform: scale(0)
}
.wux-switch__input--checked:after {
  -webkit-transform: translateX(40rpx);
      -ms-transform: translateX(40rpx);
          transform: translateX(40rpx)
}
.wux-switch__input--disabled {
  opacity: .3
}