  height: 72rpx !important;
  font-size: 34rpx !important;
  border-radius: 10rpx !important;
}

.tells2 .at-search-bar .at-search-bar__input {
  color: #191A1B;
}

.tells2 .at-search-bar .at-search-bar__placeholder-wrap .at-icon {
  font-size: 34rpx;
}

.tells2 .at-search-bar .at-search-bar__input-cnt {
  background: #FFF;
}

.tells2 .at-search-bar .at-search-bar__action {
  font-size: 36rpx !important;
  line-height: 50rpx !important;
  background: none;
  color: #576b95;
  margin-left: 0;
}

.tells2 .at-indexes__list .at-indexes__list-title {
  padding: 0;
  height: 64rpx;
  background: #ecedee;
  font-size: 24rpx;
  padding-left: 28rpx;
  line-height: 64rpx;
}

.tells2 .wux-index-item__hd {
  background: #ECEDEE;
  font-size:24rpx;
