@import '../tellsPeople/index.wxss';
page{
  background-color: #ededed;
}
.tells2 {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  -ms-flex-direction: column;
  flex-direction: column;
  height: 100%;
}

.tells2-navbar {
  background: #ededed;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
}

.tells2-navbar-img {
  height: 40rpx;
  width: 36rpx;
}

.tells2-navbar-text {
  font-size: 20rpx;
  color: #1e2737;
  margin-left: 16rpx;
}

.tells2-search {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  position: relative;
}

.tells2-search_cover {
  background: black;
  opacity: 0.4;
  width: 100%;
  position: absolute;
  z-index: 90;
  top: 0;
  left: 0;
}

.tells2-search-isSearch {
  background: #fff;
}

.tells2-search-isSearch-title {
  width: 100%;
  height: 64rpx;
  background: whitesmoke;
  font-size: 24rpx;
  color: #999999;
  line-height: 64rpx;
  padding-left: 28rpx;
}

.tells2-top {
  height: auto;
}

.tells2-top-title {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  background: whitesmoke;
  padding-left: 28rpx;
  color: #999999;
  font-size: 24rpx;
}

.tells2-list-item {
  height: 106rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
  padding: 0 28rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  background-color: #fff;
}

.tells2-list-item .list_img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background: #eee;
}

.tells2-list-item .list_msg {
  margin-left: 28rpx;
  border-bottom: 2rpx solid #EEEEEE;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
  color: #1E2737;
  font-size: 28rpx;
  height: 106rpx;
}

.tells2 .at-tab-bar .at-tab-bar__icon {
  font-size: 28rpx;
}

.tells2 .at-tab-bar .at-tab-bar__item {
  padding: 0;
}

.tells2 .at-search-bar {
  background: #EDEDED;
  padding: 16rpx 20rpx;
}

